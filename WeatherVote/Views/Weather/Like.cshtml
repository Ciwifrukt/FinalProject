@model WeatherVM
<!-- weather section  -->
    <div class="container" style="margin-bottom:3em">
        <div class="row">
            <div class="col-lg-8">@Model.City</div>
            <div class="col-lg-8">@Model.Date</div>
        </div>

        @foreach (var w in Model.Weathers)
        {

            <div class="row">
                <div id="" class="col-lg-8 mx-auto weather">
                    <!-- weather header section -->
                    <div class="weather-head" onclick="showa(this)">


                        <h1 id="location" class="text-center display-4"><strong>@w.Supplier.Name</strong></h1>

                        <div class="row" style="display: flex; justify-content: space-around">
                            <div class="col-xs-6 text-center">
                                <form method="post">
                                    <button class="btn btn-light" style='font-size:16px; min-width:90px;height:35px;color:yellow;background-color:transparent' type="submit" asp-action="AddLikes" asp-route-wname="@w.Supplier.Name" asp-route-loc="@w.Loc.CityName" asp-route-typ="like">Like  <i class='far fa-thumbs-up'></i> </button>
                                </form>
                            </div>
                            <div class="col-xs-6 text-center">
                                <form method="post">
                                    <button class="btn btn-light" style='font-size:16px; min-width: 90px;height: 35px; color:red;background-color:transparent' type="submit" asp-action="AddLikes" asp-route-wname="@w.Supplier.Name" asp-route-loc="@w.Loc.CityName" asp-route-typ="dislike">Dislike  <i class='far fa-thumbs-down'></i> </button>
                                </form>
                            </div>
                        </div>


                        <div class="row">
                            <div id="description" class="description col-6 text-center">
                                @*<i id="icon-desc" class="wi wi-owm-200"></i>*@
                                @*<img src="~/img/weathericons/04.png" />*@
                                <img id="icon-desc" src=@w.ImgIcon />
                                <p class="desc">@w.Description</p>
                            </div>
                            <div id="temperature" class="col-6 text-center" style="text-align: left;">
                                @*<i id="icon-thermometer" class="wi wi-thermometer"></i>*@
                                <br />
                                @w.Temperatur &#8451;
                            </div>
                        </div>
                        <!-- weather body header -->
                        <div class="weather-body" style="display:none">
                            <div class="row">
                                <div class="humidity col-4 text-center">
                                    <i class="wi wi-raindrop"></i><span> Humidity</span>
                                </div>
                                <div class="wind col-4 text-center">
                                    <i class="wi wi-strong-wind"></i><span> Wind Speed</span>
                                </div>
                                <div class="visibility col-4 text-center">
                                    <i class="wi wi-wu-rain"></i><span> Perecipitation</span>
                                </div>
                            </div>
                            <!-- weather body data -->
                            <div class="row">
                                <div id="humidity" class="humidity-data col-4 text-center">
                                    @w.Humidity%
                                </div>
                                <div id="wind" class="wind-data col-4 text-center">
                                    @w.Wind m/s
                                </div>
                                <div id="visibility" class="degree-data col-4 text-center">
                                    @w.Precipitation mm
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        };
    </div>

@*Like and dislike icons*@
<script src='https://kit.fontawesome.com/a076d05399.js'></script>



